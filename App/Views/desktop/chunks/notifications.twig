{% import '_macros.twig' as macros %}
{% for release in notifications %}
<div class='Navigation_UpdateWin Item' x='album' param='id={{ release.id }}'>
    <div class='Label'><div class='Ico' style='background-image: url({{ release.cover }});'></div></div>
    <div class='InfoX'>
        <div class='Block'>
            <div class='Cut Title Regular text-face--regular'>{{ release.name }}</div>
            <div class='Cut Ad Regular text-face--regular'>
                {% for key, artist in release.artists%}
                    {{ macros.artistDiv(artist) }}
                    {% if key < release.artists|length -1%}
                        &
                    {% endif %}
                {% endfor %}
            </div>
            <div class='inter--2'></div>
            <div class='Cut Ad Regular text-face--regular'>{{ macros.format_year(release.release_date) }} | {{ release.type }}</div>
        </div>
    </div>
</div>
{% endfor %}